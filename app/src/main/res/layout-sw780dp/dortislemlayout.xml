<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dortislem">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_orange_dark">


        <RelativeLayout
            android:id="@+id/sorugovdelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_orange_dark"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_above="@id/adView">




                <TextView
                    android:id="@+id/sorunumarasıTxtv"
                    android:layout_width="400dp"
                    android:layout_height="80dp"
                    android:background="@drawable/sorunumarasi"
                    android:fontFamily="@font/comic"
                    android:paddingLeft="90dp"
                    android:paddingRight="90dp"
                    android:text="@string/questionleft"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="50dp"/>

            <RelativeLayout
                android:id="@+id/animationlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sorunumarasıTxtv"
                android:layout_marginTop="50dp">

                <LinearLayout
                    android:id="@+id/sorusayilarlayout"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sayi1Txtv"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/edittext"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_gravity="center_vertical"
                        android:text="60"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="60sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/sembolBtn"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_gravity="center_vertical"
                        android:text=" X "
                        android:background="@android:color/transparent"
                        android:textSize="48sp" />

                    <TextView
                        android:id="@+id/sayi2Txtv"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/edittext"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_gravity="center_vertical"
                        android:text="36"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="60sp"
                        android:textStyle="bold" />




                </LinearLayout>

                <Button
                    android:id="@+id/soruTxtv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sorusayilarlayout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="@string/questionfordivision"
                    android:background="@android:color/transparent"
                    android:textAlignment="center"
                    android:fontFamily="@font/comic"
                    android:textAllCaps="false"
                    android:textSize="30sp"
                    android:textStyle="bold" />



                <LinearLayout
                    android:id="@+id/siklarlayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="122dp"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/soruTxtv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/sikaBtn"
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/siklar"
                        android:onClick="cevapla"
                        android:text="24"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/sikbBtn"
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/siklar"
                        android:onClick="cevapla"
                        android:text="18"
                        android:textSize="40sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/siklarlayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="122dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/siklarlayout1"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/sikcBtn"
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:layout_marginVertical="4dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/siklar"
                        android:onClick="cevapla"
                        android:text="26"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/sikdBtn"
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginVertical="4dp"
                        android:background="@drawable/siklar"
                        android:onClick="cevapla"
                        android:text="24"
                        android:textSize="40sp" />
                </LinearLayout>



            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/nextbutonslayout"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:visibility="visible"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true">

                <Button
                    android:id="@+id/tamamlaBtn"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/nextbuttongroup"
                    android:fontFamily="@font/comic"
                    android:onClick="tamamla"
                    android:layout_margin="7dp"
                    android:text="@string/testibitir"
                    android:layout_centerVertical="true"
                    android:textAllCaps="false"
                    android:textSize="30sp"
                    android:layout_toLeftOf="@id/skorTxv"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/skorTxv"
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:gravity="center_vertical"
                    android:text="@string/skor"
                    android:fontFamily="@font/comic"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:background="@drawable/siklarclicked"
                    android:layout_centerHorizontal="true"
                    android:textSize="34sp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/nextquestionBtn"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/nextbuttongroup"
                    android:fontFamily="@font/comic"
                    android:onClick="nextquestion"
                    android:layout_margin="7dp"
                    android:text="@string/sonrakisoru"
                    android:layout_centerVertical="true"
                    android:textAllCaps="false"
                    android:layout_toRightOf="@id/skorTxv"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </RelativeLayout>



        </RelativeLayout>



        <LinearLayout
            android:id="@+id/zorluklayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_margin="50dp"
            android:background="@drawable/frame4"
            android:layout_above="@+id/adView">


            <Button
                android:id="@+id/zorlukderecesiBtn"
                android:layout_width="460dp"
                android:layout_height="80dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="200dp"
                android:background="@drawable/siklar"
                android:fontFamily="@font/comic"
                android:text="@string/choosedifficulty"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/kolayBtn"
                android:layout_width="380dp"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/siklarclicked"
                android:fontFamily="@font/comic"
                android:text="@string/easy"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/ortaBtn"
                android:layout_width="380dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/nextbuttongroup"
                android:fontFamily="@font/comic"
                android:paddingHorizontal="20dp"
                android:text="@string/moderate"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/zorBtn"
                android:layout_width="380dp"
                android:layout_height="60dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/hatalisik"
                android:fontFamily="@font/comic"
                android:paddingHorizontal="20dp"
                android:text="@string/hard"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
        android:id="@+id/sonuclarlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/frame4"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_above="@id/adView"
        android:visibility="visible">




                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="170dp"
                    android:src="@drawable/scores" />


                <Button
                    android:id="@+id/sorusayisiTxtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/comic"
                    android:gravity="center_vertical"
                    android:text="@string/totalquestion"
                    android:textAllCaps="false"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/dogrusayisiTxtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/comic"
                    android:gravity="center_vertical"
                    android:text="@string/rightanswers"
                    android:textAllCaps="false"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/yanlissayisiTxtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/comic"
                    android:gravity="center_vertical"
                    android:text="@string/wronganswers"
                    android:textAllCaps="false"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bossayisiTxtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/comic"
                    android:gravity="center_vertical"
                    android:text="@string/unanswered"
                    android:textAllCaps="false"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/toplampuanTxtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/comic"
                    android:gravity="center_vertical"
                    android:text="@string/totalpoints"
                    android:textAllCaps="false"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/testcikisBtn"
                    android:layout_width="230dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/siklar"
                    android:fontFamily="@font/comic"
                    android:onClick="cikis"
                    android:text="@string/backtokonular"
                    android:textAllCaps="false"
                    android:textSize="28sp"
                    android:textStyle="bold" />





    </LinearLayout>

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-4100535460120599/3198494746">
        </com.google.android.gms.ads.AdView>
















    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>




