            android:layout_width="310dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/smartkidsheader"
            android:padding="15sp"/>

    </LinearLayout>


    <ScrollView
