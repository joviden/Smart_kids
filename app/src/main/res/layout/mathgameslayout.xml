                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/ritmikTxt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/konularpembe"
                        android:fontFamily="@font/comic"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_gravity="center_vertical"
                        android:text="@string/konularritmik"
                        android:onClick="ritmikact"
                        android:clickable="true"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:layout_toLeftOf="@id/ritmikranks"/>
                    <LinearLayout
                        android:id="@+id/ritmikranks"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/ritmikleader"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/leaderboardcup" />

                    </LinearLayout>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/ritmiktoplamsoruTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/totalquestionh"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/ritmikdogrusoruTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/rightanswersh"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/ritmikyanlissoruTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/wronganswersh"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/ritmikbossoruTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/unanswered"
                        android:textStyle="bold"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:id="@+id/ritmikBar"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="150dp"
                            android:layout_height="18dp"
                            android:maxHeight="16dp"
                            android:minHeight="16dp"
                            android:visibility="visible"
                            android:background="@drawable/siklarclicked"
                            android:layout_gravity="center_vertical"
                            android:layout_marginVertical="5dp"/>

                        <TextView
