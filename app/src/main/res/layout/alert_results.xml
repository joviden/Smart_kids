<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/alert_results_height"
    android:background="@drawable/cerceve_alert_dialog">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/alert_results_height">



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.10" />





        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical88"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.85" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical95"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />




        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal05"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal18"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.18" />










        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal87"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.88" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal97"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.97" />
















        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/zorlukderecesiBtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_horizontal05"
            app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal18"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical05"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical95"
            android:background="@drawable/siklar"
            android:fontFamily="@font/justsay"
            android:text="SCORES"
            android:textAllCaps="false"
            android:textSize="@dimen/header_biggest"
            android:textStyle="bold" />





        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="@id/guideline_horizontal18"
            app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal87"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical10"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical95">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical88a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.84" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical80a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.80" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical60a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.60" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/learnedStampBtn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical60a"
                app:layout_constraintEnd_toEndOf="@id/guideline_vertical80a"
                app:layout_constraintTop_toTopOf="@id/pointsbar"
                app:layout_constraintBottom_toBottomOf="@id/pointsbar"
                android:visibility="visible"
                android:elevation="12dp"
                android:background="@drawable/icon_perfect"
                android:textAllCaps="false"/>



            <LinearLayout
                android:id="@+id/scoresLinear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sorusayisiTxtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/totalquestion"
                    android:textSize="@dimen/text_normal"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/comic"
                    android:textAllCaps="false"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/dogrusayisiTxtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/rightanswers"
                    android:textSize="@dimen/text_normal"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/comic"
                    android:textAllCaps="false"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/yanlissayisiTxtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/wronganswers"
                    android:textSize="@dimen/text_normal"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/comic"
                    android:textAllCaps="false"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bossayisiTxtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/unanswered"
                    android:textSize="@dimen/text_normal"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/comic"
                    android:textAllCaps="false"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/toplampuanTxtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/totalpoints"
                    android:textSize="@dimen/text_normal"
                    android:fontFamily="@font/comic"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:textAllCaps="false"/>


            </LinearLayout>

            <ProgressBar
                android:id="@+id/pointsbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical88a"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/scoresLinear"
                app:layout_constraintBottom_toBottomOf="@id/scoresLinear"
                android:layout_alignParentEnd="true"
                android:max="100"
                android:progressDrawable="@drawable/vertical_progress_bar"
               />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/progressTxt"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/comic"
                android:text="%100"
                android:textAlignment="center"
                android:textSize="@dimen/text_normal"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical88a"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/scoresLinear"
                app:layout_constraintBottom_toBottomOf="@id/scoresLinear" />








        </androidx.constraintlayout.widget.ConstraintLayout>





        <Button
            android:id="@+id/testcikisBtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="W,2.7:1"
            app:layout_constraintTop_toTopOf="@id/guideline_horizontal87"
            app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal97"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical10"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical90"
            android:background="@drawable/siklarclicked"
            android:fontFamily="@font/comic"
            android:text="@string/backtokonular"
            android:textAllCaps="false"
            android:textSize="@dimen/text_normal"
            android:textStyle="bold"
            android:layout_gravity="center"/>





    </androidx.constraintlayout.widget.ConstraintLayout>











</LinearLayout>


