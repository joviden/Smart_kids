<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_orange_dark">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentTop="true"
                android:alpha="1"
                app:srcCompat="@drawable/smartkidsheader" />

            <ImageView
                android:id="@+id/stickman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="110dp"
                android:layout_below="@id/logo"
                android:layout_centerHorizontal="true"
                android:alpha="1"
                app:srcCompat="@drawable/girislogo" />



            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/entrygif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/etnrygif"
                android:layout_centerHorizontal="true" />




        </RelativeLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:padding="8dp">

            <Button
                android:id="@+id/girisBtn"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@drawable/girissbutton"
                android:fontFamily="@font/annie_use_your_telescope"
                android:onClick="giris"
                android:text="@string/girisBtn"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>


    </RelativeLayout>




</android.support.constraint.ConstraintLayout>
