<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_orange_dark">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:alpha="1"
                app:srcCompat="@drawable/logo1" />

            <ImageView
                android:id="@+id/stickman"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/logo"
                android:layout_centerHorizontal="true"
                android:alpha="1"
                app:srcCompat="@drawable/stickman" />

            <ImageView
                android:id="@+id/logo2"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/stickman"
                android:alpha="1"
                app:srcCompat="@drawable/logo3" />




        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="58dp"
            android:orientation="vertical"
            android:padding="8dp">


            <com.smartkids.TypeWriter
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:alpha="0.7"
                android:fontFamily="casual"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:padding="8dp">

            <Button
                android:id="@+id/girisBtn"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@drawable/girissbutton"
                android:fontFamily="@font/annie_use_your_telescope"
                android:onClick="giris"
                android:text="@string/girisBtn"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>


    </RelativeLayout>




</android.support.constraint.ConstraintLayout>
