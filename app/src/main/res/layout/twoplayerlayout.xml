                    android:layout_height="65dp"
                    android:background="@drawable/hatalisik"
                    android:text="3"
                    android:textAlignment="center"
                    android:textSize="45sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/seceneklerlayout"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_above="@id/girisbtnlayout"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/edittext"
                android:layout_centerHorizontal="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">



                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/toplamaswitch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=" + "
                    android:textSize="30sp"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/cikarmaswitch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=" - "
                    android:textStyle="bold"
                    android:textSize="30sp"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/carpmaswitch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text=" x "
                    android:textSize="25sp"
                    android:textAlignment="center"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/bolmeswitch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=" ÷ "
                    android:textSize="30sp"/>


            </LinearLayout>

            <LinearLayout
