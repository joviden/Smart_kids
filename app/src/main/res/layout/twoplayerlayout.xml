    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/footballback">

        <RelativeLayout
            android:id="@+id/twoplayergirislayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <ImageView
                android:id="@+id/smartheader"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/smartkidsfootball"
                android:padding="15sp"/>

            <ImageView
                android:id="@+id/twoplayerheader"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/smartheader"
                android:background="@drawable/twoplayersheader"
                android:padding="15sp"/>


            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/playingboygif"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/icon_ball"
                android:layout_gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/twoplayersinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="10dp"
                android:layout_above="@id/seceneklerlayout"
                android:background="@android:color/transparent"
                android:text="@string/twoplayersinfo"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:fontFamily="@font/comic"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/countdownlayout"
                android:layout_width="85dp"
                android:layout_height="75dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
