<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/alert_dialog_height"
    android:background="@drawable/cerceve_alert_dialog">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/alert_dialog_height">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical85"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.85" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical98"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal05"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal20"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.20" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal25"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal37"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.37" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal40"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.40" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal52"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.52" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal55"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.55" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal67"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.67" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal70"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.70" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal82"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.82" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal85"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.85" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal99"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.97" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/zorlukderecesiBtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_horizontal05"
            app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal20"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical05"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical98"
            android:background="@drawable/siklar"
            android:fontFamily="@font/mclaren"
            android:text="@string/chooseOpt"
            android:textAllCaps="false"
            android:textSize="@dimen/header_big"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkbox_toplama"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/siklarclicked"
            android:text="@string/konulartoplama"
            android:textSize="@dimen/testibitir"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:buttonTint="@color/light_black"
            android:fontFamily="@font/mclaren"
            app:layout_constraintTop_toTopOf="@id/guideline_horizontal25"
            app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal37"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical15"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical85"
            android:textColor="@color/light_black" />


        <CheckBox
            android:id="@+id/checkbox_cikarma"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/nextbuttongroup"
            android:text="@string/konularcikarma"
            android:textSize="@dimen/testibitir"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:buttonTint="@color/kirlibeyaz"
            android:fontFamily="@font/mclaren"
            app:layout_constraintTop_toTopOf="@id/guideline_horizontal40"
            app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal52"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical15"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical85"
            android:textColor="@color/dahakirlibeyaz" />

        <CheckBox
            android:id="@+id/checkbox_carpma"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/hatalisik"
            android:text="@string/konularcarpma"
            android:textSize="@dimen/testibitir"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:buttonTint="@color/kirlibeyaz"
            android:fontFamily="@font/mclaren"
            app:layout_constraintTop_toTopOf="@id/guideline_horizontal55"
            app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal67"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical15"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical85"
            android:textColor="@color/dahakirlibeyaz" />


        <CheckBox
            android:id="@+id/checkbox_bolme"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/mor_cerceve"
            android:text="@string/konularbolme"
            android:textSize="@dimen/testibitir"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:buttonTint="@color/kirlibeyaz"
            android:fontFamily="@font/mclaren"
            app:layout_constraintTop_toTopOf="@id/guideline_horizontal70"
            app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal82"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical15"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical85"
            android:textColor="@color/kirlibeyaz" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/okBtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="W,2.7:1"
            app:layout_constraintTop_toTopOf="@id/guideline_horizontal85"
            app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal99"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical15"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical85"
            android:background="@drawable/cevapbtn"
            android:fontFamily="@font/mclaren"
            android:text="@string/ok"
            android:textAllCaps="false"
            android:textSize="@dimen/testibitir"
            android:textStyle="bold"
            android:layout_gravity="center"/>
























    </androidx.constraintlayout.widget.ConstraintLayout>











</LinearLayout>


