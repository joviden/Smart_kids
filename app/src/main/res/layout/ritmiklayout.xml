<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smartkids.akillicocuklar2.RitmiksaymaActivity">





<RelativeLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@android:color/holo_orange_dark">

<RelativeLayout
    android:id="@+id/sorugovdelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_dark"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:visibility="visible">



        <TextView
            android:id="@+id/sorunumarasıTxtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sorunumarasi"
            android:fontFamily="@font/comic"
            android:paddingLeft="90dp"
            android:paddingRight="90dp"
            android:paddingVertical="2dp"
            android:text="@string/questionleft"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"/>


    <LinearLayout
        android:id="@+id/sorusayilarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_below="@id/sorunumarasıTxtv">

        <TextView
            android:id="@+id/sayi1Txtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="2"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text=" , "
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sayi2Txtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="4"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text=" , "
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sayi3Txtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="6"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text=" , "
            android:textSize="24sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/sayi4Txtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="..."
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text=" , "
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sayi5Txtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="10"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text=" , "
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sayi6Txtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="12"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>



    <Button
        android:id="@+id/soruTxtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sorusayilarlayout"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:paddingHorizontal="2dp"
        android:paddingVertical="8dp"
        android:text="@string/questionforritmik"
        android:background="@android:color/transparent"
        android:textAlignment="viewStart"
        android:fontFamily="@font/comic"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/siklarlayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/soruTxtv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/eksiltBtn"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/hatalisik"
            android:fontFamily="@font/comic"
            android:onClick="eksilt"
            android:text="@string/eksilt"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cevapTxtv"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="12"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/siklar"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/artitBtn"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/siklarclicked"
            android:fontFamily="@font/comic"
            android:onClick="artir"
            android:text="@string/artır"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold" />



    </LinearLayout>



        <Button
            android:id="@+id/cvpBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/siklar"
            android:fontFamily="@font/comic"
            android:onClick="cevapla"
            android:paddingHorizontal="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/siklarlayout1"
            android:text="@string/cevapla"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/nextbutonslayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/adView"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/tamamlaBtn"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@id/skorTxv"
            android:background="@drawable/nextbuttongroup"
            android:fontFamily="@font/comic"
            android:onClick="tamamla"
            android:text="@string/testibitir"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/skorTxv"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/siklarclicked"
            android:fontFamily="@font/comic"
            android:gravity="center_vertical"
            android:text="@string/skor"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/nextquestionBtn"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/skorTxv"
            android:background="@drawable/nextbuttongroup"
            android:fontFamily="@font/comic"
            android:onClick="nextquestion"
            android:text="@string/sonrakisoru"
            android:textAllCaps="false"
            android:textSize="14dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-4100535460120599/3198494746">
    </com.google.android.gms.ads.AdView>




</RelativeLayout>


    <LinearLayout
        android:id="@+id/sonuclarlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/frame4"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:src="@drawable/scores"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_horizontal">


            <Button
                android:id="@+id/sorusayisiTxtv"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="@string/totalquestion"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/comic"
                android:background="@android:color/transparent"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/dogrusayisiTxtv"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:text="@string/rightanswers"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/comic"
                android:background="@android:color/transparent"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/yanlissayisiTxtv"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:text="@string/wronganswers"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/comic"
                android:background="@android:color/transparent"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/bossayisiTxtv"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:text="@string/unanswered"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/comic"
                android:background="@android:color/transparent"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/toplampuanTxtv"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:text="@string/totalquestion"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/comic"
                android:background="@android:color/transparent"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/testcikisBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/siklar"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/comic"
                android:onClick="cikis"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="@string/backtokonular"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>


        </LinearLayout>


    </LinearLayout>





</RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

